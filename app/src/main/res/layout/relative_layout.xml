<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/relative_layout_ibtn_magasin"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/relative_layout_tvw_nom_magasin"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/relative_layout_ibtn_magasin"
        android:layout_toEndOf="@+id/relative_layout_ibtn_magasin"
        android:layout_alignBottom="@+id/relative_layout_ibtn_magasin"
        android:gravity="center"
        android:singleLine="false"
        tools:textStyle="normal"
        android:textSize="20sp" />
</RelativeLayout>